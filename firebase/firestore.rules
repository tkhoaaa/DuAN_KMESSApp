rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    function userProfile(uid) {
      return exists(/databases/$(database)/documents/user_profiles/$(uid))
        ? get(/databases/$(database)/documents/user_profiles/$(uid)).data
        : null;
    }

    function isUserBanned(uid) {
      let profile = userProfile(uid);
      // Nếu profile không tồn tại, user không bị ban
      return profile != null
        && ('banStatus' in profile)
        && profile.banStatus != null
        && profile.banStatus != 'none'
        && (
          profile.banStatus == 'permanent'
          || (
            profile.banStatus == 'temporary'
            && ('banExpiresAt' in profile)
            && profile.banExpiresAt != null
            && request.time < profile.banExpiresAt
          )
        );
    }

    function canPublishContent() {
      return isSignedIn() && !isUserBanned(request.auth.uid);
    }

    function isOwner(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }

    function isPostOwner() {
      return isSignedIn() && resource.data.authorUid == request.auth.uid;
    }

    // Admin documents - dùng để xác định quyền admin và gửi thông báo
    match /admins/{uid} {
      // Cho phép mọi user đã đăng nhập đọc danh sách admins
      // (không có dữ liệu nhạy cảm, chỉ chứa uid và thời gian được gán quyền)
      allow read: if isSignedIn();
      allow write: if false;
    }

    // User profiles: cho phép đọc công khai, owner được ghi, admin được cập nhật trạng thái ban / quyền admin
    match /user_profiles/{uid} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.auth.uid == uid;
      // Cho phép update:
      // - Owner: cập nhật thông tin cá nhân
      // - Admin: có toàn quyền update profile (bao gồm banStatus, isAdmin, ...)
      // - Hệ thống follow: chỉ update followersCount/followingCount
      allow update: if
        // Owner update profile của chính mình
        isOwner(uid)
        ||
        // Admin update bất kỳ profile nào
        isAdmin()
        ||
        // Cập nhật counters follow từ client
        (
          isSignedIn() &&
          request.resource.data.diff(resource.data).affectedKeys().hasAny(['followersCount', 'followingCount']) &&
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['followersCount', 'followingCount', 'updatedAt']) &&
          (!('followersCount' in request.resource.data.diff(resource.data).affectedKeys()) || request.resource.data.followersCount is int) &&
          (!('followingCount' in request.resource.data.diff(resource.data).affectedKeys()) || request.resource.data.followingCount is int)
        );
      allow delete: if isOwner(uid);

      // Followers subcollection
      // Cho phép follower tự tạo (khi follow) hoặc owner của profile tạo (khi accept request)
      match /followers/{followerUid} {
        allow read: if isSignedIn();
        allow create, delete: if isSignedIn() && (
          request.auth.uid == followerUid || 
          request.auth.uid == uid
        );
        allow update: if false;
      }

      // Following subcollection
      // Cho phép owner của profile tạo (khi follow) hoặc người được follow tạo (khi accept request)
      match /following/{followedUid} {
        allow read: if isSignedIn();
        allow create, delete: if isSignedIn() && (
          request.auth.uid == uid || 
          request.auth.uid == followedUid
        );
        allow update: if false;
      }

      // FCM tokens subcollection
      match /fcm_tokens/{token} {
        allow read, write: if isOwner(uid);
      }

      // Notifications subcollection
      match /notifications/{notificationId} {
        allow read, write: if isOwner(uid);
      }
    }

    // Follow requests collection group
    match /follow_requests/{userId}/requests/{requestId} {
      allow read: if isSignedIn() && (request.auth.uid == userId || request.auth.uid == resource.data.fromUid);
      allow create: if isSignedIn() 
        && request.resource.data.fromUid == request.auth.uid
        && request.resource.data.keys().hasOnly(['fromUid', 'createdAt'])
        && request.resource.data.fromUid is string
        && request.resource.data.createdAt is timestamp;
      allow update, delete: if isSignedIn() && (request.auth.uid == userId || request.auth.uid == resource.data.fromUid);
    }

    // Collection group query for follow_requests
    match /{path=**}/requests/{requestId} {
      allow read: if isSignedIn() && (
        request.auth.uid == resource.data.fromUid ||
        request.auth.uid == resource.data.toUid
      );
    }

    // Conversations
    match /conversations/{conversationId} {
      allow read: if isSignedIn() && request.auth.uid in resource.data.participantIds;
      allow create: if isSignedIn() 
        && request.auth.uid in request.resource.data.participantIds
        && !isUserBanned(request.auth.uid);
      allow update: if isSignedIn()
        && request.auth.uid in resource.data.participantIds
        && !isUserBanned(request.auth.uid);
      allow delete: if false; // Không cho xóa conversation

      // Participants subcollection: lưu role, joinedAt, lastReadAt, notificationsEnabled
      match /participants/{participantUid} {
        allow read: if isSignedIn()
          && request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds;
        // Cho phép:
        // - Admin tạo participant cho thành viên khác (khi thêm vào group)
        // - Chính participant update các field của mình (lastReadAt, notificationsEnabled)
        // - Admin update role của thành viên
        allow create: if isSignedIn()
          && (
            // Tự tạo bản ghi của chính mình
            (request.auth.uid == participantUid &&
             request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds)
            ||
            // Admin tạo bản ghi cho thành viên khác
            (request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.admins)
            ||
            // Chủ conversation (createdBy) cũng được phép tạo bản ghi participant
            (request.auth.uid == get(/databases/$(database)/documents/conversations/$(conversationId)).data.createdBy)
          );
        allow update: if isSignedIn()
          && (
            // Participant tự update
            (request.auth.uid == participantUid &&
             request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds)
            ||
            // Admin update (ví dụ đổi role)
            (request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.admins)
          );
        allow delete: if false;
      }

      // Messages subcollection
      match /messages/{messageId} {
        allow read: if isSignedIn() && request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds;
        allow create: if isSignedIn() 
          && request.resource.data.senderId == request.auth.uid
          && request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds
          && !isUserBanned(request.auth.uid);
        // Cho phép sender update hoặc participant update seenBy/reactions
        allow update: if isSignedIn() && (
          request.auth.uid == resource.data.senderId ||
          (request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds &&
           request.resource.data.diff(resource.data).affectedKeys().hasOnly(['seenBy', 'reactions']) &&
           (!('seenBy' in request.resource.data.diff(resource.data).affectedKeys()) || request.resource.data.seenBy is list) &&
           (!('reactions' in request.resource.data.diff(resource.data).affectedKeys()) || request.resource.data.reactions is map)
          )
        );
        allow delete: if isSignedIn() && request.auth.uid == resource.data.senderId;
      }
    }

    // Post drafts collection
    match /post_drafts/{uid}/items/{draftId} {
      allow read: if isSignedIn() && isOwner(uid);
      allow write: if isOwner(uid) && !isUserBanned(uid);
    }

    // Posts collection
    match /posts/{postId} {
      allow read: if isSignedIn();

      allow create: if canPublishContent()
        && request.resource.data.authorUid == request.auth.uid
        && request.resource.data.media is list
        && request.resource.data.caption is string
        && (request.resource.data.captionLower == null || request.resource.data.captionLower is string)
        && (request.resource.data.hashtags == null || request.resource.data.hashtags is list)
        && request.resource.data.createdAt is timestamp
        && request.resource.data.likeCount is int
        && request.resource.data.commentCount is int
        && request.resource.data.status is string
        && (request.resource.data.status == 'published' || request.resource.data.status == 'scheduled')
        && (request.resource.data.status == 'published' ? !('scheduledAt' in request.resource.data) : request.resource.data.scheduledAt is timestamp);

      // Cho phép owner update/delete hoặc chỉ update likeCount/commentCount hoặc status/scheduledAt
      allow update: if isPostOwner() || (
        isSignedIn() && (
          // Update likeCount/commentCount
          (
            request.resource.data.diff(resource.data).affectedKeys().hasAny(['likeCount', 'commentCount']) &&
            request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likeCount', 'commentCount']) &&
            (!('likeCount' in request.resource.data.diff(resource.data).affectedKeys()) || request.resource.data.likeCount is int) &&
            (!('commentCount' in request.resource.data.diff(resource.data).affectedKeys()) || request.resource.data.commentCount is int)
          ) ||
          // Update status/scheduledAt (chỉ owner)
          (
            isPostOwner() &&
            request.resource.data.diff(resource.data).affectedKeys().hasAny(['status', 'scheduledAt']) &&
            request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'scheduledAt']) &&
            (request.resource.data.status == null || request.resource.data.status is string) &&
            (request.resource.data.scheduledAt == null || request.resource.data.scheduledAt is timestamp)
          )
        )
      );
      allow delete: if isPostOwner();

      match /likes/{uid} {
        allow read: if isSignedIn();
        allow create: if isSignedIn() && request.auth.uid == uid && !isUserBanned(uid);
        allow delete: if isSignedIn() && request.auth.uid == uid;
        allow update: if false;
      }

      match /comments/{commentId} {
        allow read: if isSignedIn();
        allow create: if isSignedIn()
          && request.resource.data.authorUid == request.auth.uid
          && !isUserBanned(request.auth.uid)
          && request.resource.data.text is string
          && (request.resource.data.createdAt == request.time || request.resource.data.createdAt is timestamp);

        allow delete: if isSignedIn() && (
          request.auth.uid == resource.data.authorUid ||
          isPostOwner()
        );

        allow update: if false;
      }
    }

    // Notifications collection
    match /notifications/{notificationId} {
      // Cho phép read nếu là toUid (owner của notification)
      allow read: if isSignedIn() && request.auth.uid == resource.data.toUid;
      allow create: if isSignedIn() 
        && request.resource.data.fromUid == request.auth.uid
        && request.resource.data.toUid is string
        && request.resource.data.type is string;
      allow update: if isSignedIn() 
        && request.auth.uid == resource.data.toUid
        && (
          // Cho phép update read
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['read']) ||
          // Cho phép update grouped notification (count, fromUids, createdAt)
          (
            request.resource.data.diff(resource.data).affectedKeys().hasAny(['count', 'fromUids', 'createdAt']) &&
            request.resource.data.diff(resource.data).affectedKeys().hasOnly(['count', 'fromUids', 'createdAt']) &&
            request.resource.data.count is int &&
            request.resource.data.count > 0 &&
            request.resource.data.fromUids is list
          )
        );
      allow delete: if isSignedIn() && request.auth.uid == resource.data.toUid;
    }

    // Notification digests collection
    // Cấu trúc: notification_digests/{uid}/items/{digestId}
    match /notification_digests/{uid} {
      match /items/{digestId} {
        allow read: if isSignedIn() && request.auth.uid == uid;
        allow create: if isSignedIn()
          && request.auth.uid == uid
          && request.resource.data.uid == uid
          && request.resource.data.period is string
          && request.resource.data.startDate is timestamp
          && request.resource.data.endDate is timestamp
          && request.resource.data.stats is map;
        allow update, delete: if isSignedIn() && request.auth.uid == uid;
      }
    }

    // Stories collection
    // Cấu trúc: stories/{uid}/items/{storyId}
    match /stories/{uid} {
      match /items/{storyId} {
        allow read: if isSignedIn(); // Có thể siết lại sau: chỉ followers
        allow create: if isSignedIn()
          && request.auth.uid == uid
          && request.resource.data.authorUid == uid
          && request.resource.data.mediaUrl is string
          && request.resource.data.type is string
          && request.resource.data.createdAt is timestamp
          && request.resource.data.expiresAt is timestamp;
          // Tạm thời bỏ qua kiểm tra isUserBanned để test - có thể bật lại sau
        allow delete: if isSignedIn() && request.auth.uid == uid;
        allow update: if false;

        // Viewers subcollection: stories/{uid}/items/{storyId}/viewers/{viewerUid}
        match /viewers/{viewerUid} {
          allow read: if isSignedIn() && request.auth.uid == uid; // chỉ chủ story xem
          allow create: if isSignedIn()
            && request.auth.uid == viewerUid
            && request.resource.data.viewedAt is timestamp;
          allow update, delete: if false;
        }
      }
    }

    match /blocks/{blockerUid} {
      match /items/{blockedUid} {
        allow read: if isSignedIn() &&
          (request.auth.uid == blockerUid || request.auth.uid == blockedUid);

        allow create: if isSignedIn()
          && request.auth.uid == blockerUid
          && request.resource.data.blockedUid == blockedUid
          && request.resource.data.blockedUid is string;

        allow update: if isSignedIn()
          && request.auth.uid == blockerUid;

        allow delete: if isSignedIn() && request.auth.uid == blockerUid;
      }
    }

    // Reports collection
    match /reports/{reportId} {
      allow create: if isSignedIn()
        && request.resource.data.reporterUid == request.auth.uid
        && request.resource.data.keys().hasOnly([
          'reporterUid',
          'targetType',
          'targetId',
          'targetOwnerUid',
          'reason',
          'status',
          'createdAt',
        ])
        && request.resource.data.targetType is string
        && request.resource.data.targetId is string
        && request.resource.data.reason is string
        && request.resource.data.status is string
        && (
          request.resource.data.targetOwnerUid == null ||
          request.resource.data.targetOwnerUid is string
        );
      allow read: if isAdmin();
      allow update: if isAdmin();
      allow delete: if false;
    }

    // Bans collection
    match /bans/{banId} {
      allow read: if isSignedIn() && (
        isAdmin() || request.auth.uid == resource.data.uid
      );
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if false;
    }

    // Appeals collection
    match /appeals/{appealId} {
      allow create: if isSignedIn()
        && request.resource.data.uid == request.auth.uid
        && request.resource.data.banId is string
        && request.resource.data.reason is string;
      allow read: if isSignedIn() && (
        isAdmin() || request.auth.uid == resource.data.uid
      );
      allow update: if isAdmin();
      allow delete: if false;
    }

    // Saved posts collection
    match /saved_posts/{uid} {
      // Không cho truy cập trực tiếp document gốc, chỉ qua subcollection items
      allow read, write: if false;

      match /items/{postId} {
        allow read: if isSignedIn() && request.auth.uid == uid;
        allow create: if isSignedIn()
          && request.auth.uid == uid
          && request.resource.data.keys().hasOnly([
            'postId',
            'postOwnerUid',
            'savedAt',
            'postUrl',
          ])
          && request.resource.data.postId == postId
          && request.resource.data.postId is string
          && (
            request.resource.data.postOwnerUid == null ||
            request.resource.data.postOwnerUid is string
          )
          && (
            request.resource.data.postUrl == null ||
            request.resource.data.postUrl is string
          )
          && (
            request.resource.data.savedAt == request.time ||
            request.resource.data.savedAt is timestamp
          );
        allow delete: if isSignedIn() && request.auth.uid == uid;
        allow update: if false;
      }
    }

    // Calls collection
    match /calls/{callId} {
      // Chỉ caller và callee được đọc
      allow read: if isSignedIn() && (
        request.auth.uid == resource.data.callerUid ||
        request.auth.uid == resource.data.calleeUid
      );

      // Chỉ caller được tạo call
      allow create: if isSignedIn()
        && request.resource.data.callerUid == request.auth.uid
        && request.resource.data.calleeUid is string
        && request.resource.data.type is string
        && request.resource.data.status is string
        && request.resource.data.status == 'ringing'
        && request.resource.data.createdAt is timestamp
        && request.resource.data.updatedAt is timestamp;

      // Caller và callee được update (để answer, reject, end, update signaling)
      allow update: if isSignedIn() && (
        request.auth.uid == resource.data.callerUid ||
        request.auth.uid == resource.data.calleeUid
      );

      // Không cho delete
      allow delete: if false;
    }

    // Search history collection (users/{uid}/search_history/{historyId})
    match /users/{uid}/search_history/{historyId} {
      // Chỉ owner được đọc và quản lý lịch sử tìm kiếm của mình
      allow read: if isSignedIn() && request.auth.uid == uid;
      allow create: if isSignedIn()
        && request.auth.uid == uid
        && request.resource.data.keys().hasOnly([
          'query',
          'searchType',
          'createdAt',
        ])
        && request.resource.data.query is string
        && request.resource.data.searchType is string
        && (
          request.resource.data.createdAt == request.time ||
          request.resource.data.createdAt is timestamp
        );
      allow update: if isSignedIn()
        && request.auth.uid == uid
        && request.resource.data.keys().hasOnly([
          'query',
          'searchType',
          'createdAt',
        ])
        && (
          request.resource.data.createdAt == request.time ||
          request.resource.data.createdAt is timestamp
        );
      allow delete: if isSignedIn() && request.auth.uid == uid;
    }
  }
}